<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:title="@string/pref_main_title">

    <!--suppress AndroidDomInspection -->
    <android.support.v7.preference.Preference
        android:key="@string/pref_key_dev_opts"
        android:icon="@drawable/ic_preference_developer_options"
        android:title="@string/pref_dev_opts_title"
        android:selectable="true"
        android:enabled="true"
        android:order="100" />

    <com.codepunk.codepunklibstaging.preference.DeveloperModePreference
        android:key="@string/pref_key_dev_password_hash"
        android:icon="@drawable/ic_preference_info"
        android:title="@string/pref_about_title"
        android:selectable="true"
        android:enabled="true"
        app:passwordHash="@string/developer_password_hash"
        android:order="200" />

    <com.codepunk.codepunklibstaging.preference.PasswordPreference
        android:key="TestKey"
        android:icon="@drawable/ic_preference_info"
        android:title="Password Test"
        android:dialogMessage="Please enter your password."
        app:messageDigestAlgorithm="sha_256"
        app:passwordHash="@string/developer_password_hash"
        app:authToken="@string/developer_auth_token"
        android:selectable="true"
        android:enabled="true"
        android:order="300" />

</android.support.v7.preference.PreferenceScreen>
